#LIBS = ['vptool', 'vpstat_tool']
LIBS = ['vpstat_tool']
env.AppendUnique(LIBS=LIBS)

# Add defines to export symbols on Windows
env.AppendUnique(CPPDEFINES=['MESSAGE'])
#env.AppendUnique(LIBS=['vptool', 'vpstat_tool'])
env.AppendUnique(LIBS=['vpstat_tool'])

